<div id="{type}Form" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{type}Label" aria-hidden="true">  <div class="modal-header">    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>    <h3 class="form-signin-heading" id="{type}Label">Please {type}</h3>  </div>  <form class="{type}Form">    <div class="modal-body">      <div class="{type}Error" id="{type}Error"></div>      <input type="text" class="input-block-level" id="email{type}" placeholder="Email address">      <input type="password" class="input-block-level" id="password{type}" placeholder="Password">    </div>    <div class="modal-footer">      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>      <button id="{type}Submit" class="btn btn-large btn-primary" type="submit">{type}</button>    </div>  </form></div>